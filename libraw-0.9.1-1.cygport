ORIG_PN="LibRaw"

DESCRIPTION="RAW file library"
HOMEPAGE="http://www.libraw.org/"
SRC_URI="http://www.libraw.org/data/${ORIG_PN}-${PV}.tar.gz"

PKG_NAMES="${PN} ${PN}-devel"
libraw_devel_CONTENTS="usr/"

src_compile() {
	lndirs
	cd ${B}
	cygmake
}

src_install() {
	cd ${B}
	insinto /usr/include/libraw
	doins libraw/*.h

	dolib lib/*.a

	dodoc LICENSE.*
}
